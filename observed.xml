<!-- illabb13 -->
<!-- Версия: 0.9 (WoT 0.9.1) -->
<settings.xml>

    <!-- Включение/Отключение мода при старте боя -->
    <!-- 0 - включен при старте, 1 - выключен -->
    <!-- ЗНАЧЕНИЕ ПО УМОЛЧАНИЮ: "1" -->
    <disabledByStartBattle>1</disabledByStartBattle>


    <!-- Ограничение работы мода для опеределенных типов боев -->
    <!-- Если опция включена (значение 1), то мод будет работать ТОЛЬКО в следующих типах боев: -->
    <!--      - Специальный бой -->
    <!--      - Тренировочный бой -->
    <!--      - Ротный бой -->
    <!--      - Командный бой -->
    <!-- 0 - ограничение выключено (работает во всех типах боев, в т.ч. и рандоме) -->
    <!-- ЗНАЧЕНИЕ ПО УМОЛЧАНИЮ: "1" -->
    <limitationTypeOfBattles>1</limitationTypeOfBattles>


    <!-- Включение/Отключение мода для определенных типов техники -->
    <!--      - LightTank - легкий танк -->
    <!--      - MediumTank - средний танк -->
    <!--      - HeavyTank - тяжелый танк -->
    <!--      - SPG - САУ -->
    <!--      - AT-SPG - ПТ-САУ -->
    <!-- Необходимо перечислить тип техники, для которых мод будет работать, через запятую, строго в указанном регистре -->
    <!-- ЗНАЧЕНИЕ ПО УМОЛЧАНИЮ: "LightTank, MediumTank, HeavyTank, SPG, AT-SPG" -->
    <enabledForVehType>LightTank, MediumTank, HeavyTank, SPG, AT-SPG</enabledForVehType>


    <!-- Показывать сообщение только при условии, если количество живых союзников достигло необходимого количества -->
    <!-- 0 - Данная опция выключена и проверка производиться не будет -->
    <!-- Значение больше 0 - количество живых союзников -->
    <!-- ЗНАЧЕНИЕ ПО УМОЛЧАНИЮ: "0" -->
    <showWhenLess>0</showWhenLess>


    <!-- Сообщение, которое появляется в тимчате при засвете -->
    <!-- Подстановки: -->
    <!--      {cell} - квадрат, в котором засветили -->
    <!-- Чтобы сообщение не выводилось вовсе, оставить опцию с ПУСТЫМ значением -->
    <!-- ЗНАЧЕНИЕ ПО УМОЛЧАНИЮ: "Меня засветили в квадрате {cell} >:|" -->
    <message>Меня засветили в {cell} >:|</message>


    <!-- Опция отображения сообщения "Нужна помощь" -->
    <!-- 0 - ничего показываться не будет -->
    <!-- 1 - показывается сообщение "Нужна помощь" (как по клавише F7) -->
    <!-- ЗНАЧЕНИЕ ПО УМОЛЧАНИЮ: "0" -->
    <helpMeOption>0</helpMeOption>


    <!-- Опция прокликивания по миникарте -->
    <!-- 0 - прокликиваться не будет -->
    <!-- 1 - будет прокликиваться как обычно (вместе с сообщением в чат "Внимание на квадрат...") -->
    <!-- ЗНАЧЕНИЕ ПО УМОЛЧАНИЮ: "0" -->
    <cellClickOption>0</cellClickOption>


    <!-- Опции сообщения по окончании "предполагаемого" засвета -->
    <!-- Через сколько секунд отображать сообщение на правой панели (над миникартой) -->
    <!-- Для отключения установить параметр timeEndMessage в 0 -->
    <!-- ЗНАЧЕНИЕ ПО УМОЛЧАНИЮ: "10" -->
    <timeEndMessage>10</timeEndMessage>


    <!-- Собственно, само сообщение -->
    <!-- Подстановки: -->
    <!--      {time} - значение параметра timeEndMessage (см. выше) -->
    <!-- ЗНАЧЕНИЕ ПО УМОЛЧАНИЮ: "Прошло уже {time} секунд. Возможно ты уже не светишься. Вперед за дамажкой!" -->
    <endMessage>Прошло уже {time} секунд. Возможно ты уже не светишься. Вперед за дамажкой!</endMessage>


    <!-- Включение/Отключение горячих клавиш -->
    <!-- 0 - горячие клавиши отключены, 1 - включены -->
    <!-- ЗНАЧЕНИЕ ПО УМОЛЧАНИЮ: "1" -->
    <enableHotKey>1</enableHotKey>

    <!-- Собственно, горячие клавиши -->
    <!-- Если нужно сделать комбинацию клавиш, то использовать символ "+", первой будет клавиша-модификатор -->
    <!-- Список некоторых клавиш-модификаторов: -->
    <!--      - LCONTROL - левый Ctrl -->
    <!--      - LSHIFT - левый Shift -->
    <!--      - LALT - левый Alt -->
    <!-- Обратить внимание на названия клавиш, они не с неба взяты, поэтому редактировать параметр тем, кто знает что делает -->
    <!-- Примеры: -->
    <!--      LCONTROL+F - Левый Ctrl и клавиша F -->
    <!--      F11 - клавиша F11 -->
    <!--      LALT+Q - Левый Alt и клавиша Q -->
    <!-- ЗНАЧЕНИЕ ПО УМОЛЧАНИЮ: "F10" -->
    <hotKey>F10</hotKey>

</settings.xml>