<settings.xml>
    <!-- illabb13 -->
    <!-- Версия: 0.8 (WoT 0.9.1) -->

    <!-- Включение/Отключение мода при старте боя -->
    <!-- 0 - включен, 1 - выключен -->
    <disabledByStartBattle>1</disabledByStartBattle>


    <!-- Показывать сообщение только при условии, если количество игроков достигло необходимого количества -->
    <!-- 0 - Данная опция выключена и проверка производиться не будет -->
    <!-- значение больше 0 - количество игроков для отображения надписи о засвете -->
    <showWhenLess>6</showWhenLess>


    <!-- Ограничение работы мода для опеределенных типов боев -->
    <!-- То есть, если опция включена, то мод будет работать ТОЛЬКО в следующих типах боев: -->
    <!--      - Специальный бой -->
    <!--      - Тренировочный бой -->
    <!--      - Ротный бой -->
    <!--      - Командный бой -->
    <!-- 0 - ограничение выключено (работает во всех типах боев, в т.ч. и рандоме), 1 - включено (только в указаных выше) -->
    <limitationTypeOfBattles>1</limitationTypeOfBattles>


    <!-- Сообщение, которое появляется в тимчате при засвете -->
    <message>Засветили, Демоны! :(:(:(</message>


    <!-- Опция отображения сообщения "Нужна помощь" -->
    <!-- 0 - ничего показываться не будет -->
    <!-- 1 - показывается сообщение "Нужна помощь" (как по клавише F7) -->
    <helpMeOption>2</helpMeOption>


    <!-- Опция прокликивания по миникарте -->
    <!-- 0 - прокликиваться не будет -->
    <!-- 1 - будет прокликиваться как обычно (вместе с сообщением в чат "Внимание на квадрат...") -->
    <cellClickOption>1</cellClickOption>


    <!-- Опции сообщения по окончании "предполагаемого" засвета -->
    <!-- Через сколько секунд отображать сообщение на правой панели (над миникартой) -->
    <!-- Для отключения установить параметр timeEndMessage в 0 -->
    <timeEndMessage>10</timeEndMessage>
    <!-- Собственно, само сообщение, в {time} подставится значение параметра timeEndMessage (см. выше) -->
    <endMessage>Прошло уже {time} секунд. Возможно ты уже не светишься. Вперед за дамажкой!</endMessage>


    <!-- Опция для горячих клавиш, переключение работы мода осуществляется комбинацией Ctrl+F или F10 -->
    <!-- 0 - горячие клавиши отключены, 1 - включены -->
    <enableHotKey>1</enableHotKey>

</settings.xml>