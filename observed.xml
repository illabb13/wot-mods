<settings.xml>
    <!-- illabb13 -->
    <!-- Версия: 0.7 (WoT 0.9.1) -->

    <!-- Включение/Отключение мода при старте боя -->
    <!-- 0 - включен, 1 - выключен -->
    <disabledByStartBattle>1</disabledByStartBattle>


    <!-- Показывать сообщение только при условии, если количество игроков достигло необходимого количества -->
    <!-- 0 - Данная опция выключена, больше 0 - количетсов игроков для отображения надписи о засвете -->
    <showWhenLess>6</showWhenLess>


    <!-- Ограничение работы мода для опеределенных типов боев -->
    <!-- То есть, если мод включен, то он будет работать в следующих типах боев: -->
    <!--      - Специальный бой -->
    <!--      - Тренировочный бой -->
    <!--      - Ротный бой -->
    <!--      - Командный бой -->
    <!-- 0 - ограничение выключено, 1- включено -->
    <limitationTypeOfBattles>1</limitationTypeOfBattles>


    <!-- Сообщение, которое по
    является в тимчате при засвете -->
    <message>Засветили, Демоны! :(:(:(</message>


    <!-- Опция отображения сообщения "Нужна помощь" -->
    <!-- 0 - сообщение "Нужна помощь" будет показываться вместе с сообщением о засвете, 1 - не будет -->
    <withoutHelpMe>0</withoutHelpMe>


    <!-- Опции сообщения по окончании "предполагаемого" засвета -->
    <!-- Через сколько секунд отображать сообщение на правой панели (над миникартой) -->
    <time>9</time>


    <!-- Собственно, само сообщение, в {time} подставится значение параметра time (см. выше) -->
    <endMessage>Прошло уже {time} секунд. Возможно ты уже не светишься. Вперед за дамажкой!</endMessage>


    <!-- Опция для горячих клавиш, переключение осуществляется комбинацией Ctrl+F или F10 -->
    <!-- 0 - горячие клавиши отключены, 1 - включены -->
    <enableHotKey>1</enableHotKey>

</settings.xml>